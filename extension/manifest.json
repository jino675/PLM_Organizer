{
    "manifest_version": 3,
    "name": "PLM Organizer Helper",
    "version": "1.7.8",
    "description": "Extracts PLM metadata for PLM Organizer Desktop App. Created by jino.ryu",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "downloads"
    ],
    "host_permissions": [
        "http://127.0.0.1/*",
        "file:///*",
        "*://splm.sec.samsung.net/*"
    ],
    "background": {
        "service_worker": "bg.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://splm.sec.samsung.net/*",
                "file:///*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_title": "PLM Organizer Info",
        "default_popup": "popup.html"
    }
}